<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="../R34Sharp.Targets.xml" />

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<OutputType>library</OutputType>
		<ImplicitUsings>true</ImplicitUsings>
		<Nullable>disable</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<Description>An unofficial .NET Core wrapper for the Rule34 API.</Description>
		<PackageReleaseNotes>
			Additions, improvements and minor bug fixes.

			● The API client is now more optimized, making requests with only necessary information;
			● A significant improvement in the overall performance of the API, being able to respond in milliseconds or a few seconds;
			● Added a special enum responsible for handling post ratings;
			● Correction of the method that makes post requests through filtering, where it was indefinitely making an endless request.
		</PackageReleaseNotes>
	</PropertyGroup>

	<PropertyGroup>
		<Version>1.3.0</Version>
		<VersionPrefix></VersionPrefix>
		<VersionSuffix></VersionSuffix>
	</PropertyGroup>
</Project>
