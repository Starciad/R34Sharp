<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="../R34Sharp.Targets.xml" />

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<OutputType>library</OutputType>
		<ImplicitUsings>true</ImplicitUsings>
		<Nullable>disable</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<Description>An unofficial .NET Core wrapper for the Rule34 API.</Description>
		<PackageReleaseNotes>
			Added and minor code fixes.

			● It is now possible to remove posts that have specific tags in searches;
			● Removed the ability to see sample file dimensions of the post;
			● Small changes in nomenclatures among other feats.
		</PackageReleaseNotes>
	</PropertyGroup>

	<PropertyGroup>
		<Version>1.2.0</Version>
		<VersionPrefix></VersionPrefix>
		<VersionSuffix></VersionSuffix>
	</PropertyGroup>
</Project>
