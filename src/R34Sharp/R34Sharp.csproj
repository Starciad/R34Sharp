<Project Sdk="Microsoft.NET.Sdk">
	<!-- HEADER -->
	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>disable</Nullable>
	</PropertyGroup>

	<!-- PACKAGE INFOS -->
	<PropertyGroup>
		<Title>R34Sharp</Title>
		<Product>R34Sharp</Product>
		<PackageId>R34Sharp</PackageId>
		<Description>An unofficial .NET Core wrapper for the Rule34 API.</Description>
		<Company>Starciad</Company>
		<Copyright>Starciad Â© 2023</Copyright>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryType>git</RepositoryType>
		<PackageTags>api;wrapper; csharp; dotnet; dotnet-core; wrapper-api; nsfw; wrapper-library; rule34; rule34-downloader; nsfw-api; rule34api; rule34-api;</PackageTags>
		<NeutralLanguage>en-US</NeutralLanguage>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageIcon>R34Sharp_Icon.png</PackageIcon>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<Version>1.0.0</Version>
		<Authors>Starciad</Authors>
		<PackageProjectUrl>https://github.com/Starciad/R34Sharp</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Starciad/R34Sharp</RepositoryUrl>
	</PropertyGroup>

	<!-- PACKAGE BUILD -->
	<PropertyGroup>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	</PropertyGroup>

	<!-- PACKAGE FILES -->
	<ItemGroup>
		<None Include="..\..\.github\assets\icon\R34Sharp_Icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\LICENSE.txt">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>

		<None Include="..\..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>

		<None Include="..\..\.github\assets\icon\R34Sharp_Icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
</Project>
