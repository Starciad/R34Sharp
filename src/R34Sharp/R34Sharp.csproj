<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="../Targets/Project_Compilation.targets"></Import>
	<Import Project="../Targets/Project_Infos.targets"></Import>
	<Import Project="../Targets/Project_Settings.targets"></Import>

	<PropertyGroup>
		<OutputType>Library</OutputType>
		<InvariantGlobalization>true</InvariantGlobalization>
	</PropertyGroup>

	<PropertyGroup>
		<Description>An unofficial .NET Core wrapper for the Rule34 API.</Description>
		<PackageReleaseNotes>Removal of dangerous/redundant functions.</PackageReleaseNotes>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
	</PropertyGroup>
</Project>